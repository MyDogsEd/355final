{{!-- 
    {
        title, // comment title
        date, // comment date,
        content, // text content of the comment
        id, // id of the COMMENT
        game_id // id of the parent game
    }
 --}}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">Date: {{formattedDate}}</h6>
        <p class="card-text">{{content}}</p>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editCommentModal">Edit</button>
        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteCommentModal">Delete</button>
    </div>
</div>

{{!-- Edit Comment Modal --}}
<div class="modal fade" id="editCommentModal" tabindex="-1" aria-labelledby="editCommentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCommentModalLabel">Edit Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editCommentForm" method="post" action="/games/{{GameId}}/comments/{{id}}">
                    <div class="mb-3">
                        <label for="commentTitle" class="form-label">Comment Title</label>
                        <input type="text" class="form-control" id="commentTitle" name="title" value="{{title}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="commentDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="commentDate" name="date" value="{{formattedDate}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="commentText" class="form-label">Comment Text</label>
                        <textarea class="form-control" id="commentText" rows="3" name="content" required>{{content}}</textarea>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="saveNewComment">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{!-- Delete Comment Modal --}}
<div class="modal fade" id="deleteCommentModal" tabindex="-1" aria-labelledby="deleteCommentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteCommentModalLabel">Delete Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="newCommentForm" method="post" action="/games/{{GameId}}/comments/{{id}}/delete">
                    <p>Are you sure you want to delete this comment?</p>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" id="saveNewComment">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>