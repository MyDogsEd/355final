<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text"><small class="text-muted">Purchased on: {{purchaseDate}}</small></p>
        <p class="card-text"><small class="text-muted">Will Play on: {{playDate}}</small></p>
        <div>
          <button type="button" class="btn btn-success btn-sm">{{viewLabel}}</button>
          <button type="button" class="btn btn-primary btn-sm ms-2">{{editLabel}}</button>
          <button type="button" class="btn btn-danger btn-sm ms-2">{{deleteLabel}}</button>
        </div>
      </div>
    </div>
  </div>
</div>